# PostgreSQL
POSTGRES_DB=quietus
POSTGRES_USER=quietus
POSTGRES_PASSWORD=quietus_dev_password

# Backend
SPRING_PROFILES_ACTIVE=local
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/quietus
SPRING_DATASOURCE_USERNAME=quietus
SPRING_DATASOURCE_PASSWORD=quietus_dev_password
JWT_SECRET=replace_with_long_random_secret
JWT_EXPIRATION_SECONDS=3600

# Internal service URLs (future phases)
VISION_AGENT_BASE_URL=http://vision-agent-layer:8100
AUDIO_SERVICE_BASE_URL=http://audio-service:8200
NLP_SERVICE_BASE_URL=http://nlp-service:8000

# Vision Agent Layer
VISION_SERVICE_PORT=8100
VISION_YOLO_MODEL_PATH=/app/models/yolov8n-face.pt
VISION_EMOTION_MODEL_ID=trpakov/vit-face-expression
VISION_DISTRESS_EMOTIONS=sad,fear,angry,disgust
STREAM_API_KEY=replace_with_stream_api_key
STREAM_API_SECRET=replace_with_stream_api_secret
ROBOFLOW_API_KEY=replace_with_roboflow_api_key

# Audio Service
AUDIO_SERVICE_PORT=8200
AUDIO_SER_MODEL_ID=superb/hubert-large-superb-er
AUDIO_DISTRESS_EMOTIONS=angry,sad,fear,disgust,frustrated
AUDIO_TARGET_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION_MS=2000
AUDIO_CHUNK_HOP_MS=1000
AUDIO_MAX_DURATION_SECONDS=40

# NLP Service
NLP_SERVICE_PORT=8000

# LLM reasoning provider
OPENAI_API_KEY=replace_with_openai_api_key
GEMINI_API_KEY=replace_with_gemini_api_key
LLM_PROVIDER=openai
OPENAI_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-1.5-flash

# Frontend
VITE_API_BASE_URL=http://localhost:8080
